<p id="notice"><%= notice %></p>

<h1>Ephemeris</h1>

<%= form_for :search, url: ephemeris_path, method: :get do |f| %>
  <%= f.text_field :categoria %>
  <%= f.submit "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Categoria</th>
      <th>Comentario</th>
      <th>Imagen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ephemeris.each do |ephemeri| %>
      <tr>
        <td><%= ephemeri.fecha %></td>
        <td><%= ephemeri.categoria %></td>
        <td><%= ephemeri.comentario %></td>
        <td><%= image_tag(ephemeri.imagen.url, alt: 'Imagen', resize: "100x100", size: '100') %></td>
        <td><%= link_to 'Show', ephemeri %></td>
        <td><%= link_to 'Edit', edit_ephemeri_path(ephemeri) %></td>
        <td><%= link_to 'Destroy', ephemeri, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ephemeri', new_ephemeri_path %>
