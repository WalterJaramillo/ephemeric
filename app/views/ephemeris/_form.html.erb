<%= form_with(model: ephemeri) do |form| %>
  <% if ephemeri.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ephemeri.errors.count, "error") %> prohibited this ephemeri from being saved:</h2>

      <ul>
        <% ephemeri.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :fecha %>
    <%= form.datetime_select :fecha %>
  </div>

  <div class="field">
    <%= form.label :categoria %>
    <%= form.select(:categoria, Ephemeri.categories.keys.map {|category| [category.titleize]})  %>
  </div>

  <div class="field">
    <%= form.label :comentario %>
    <%= form.text_field :comentario %>
  </div>

  <div class="field">
    <%= form.label :imagen %>
    <%= form.file_field :imagen %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
